{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 18,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "Default",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/Build/Output/${presetName}/Build",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/Build/Output/${presetName}/Install",
                "METHANE_GFX_VULKAN_ENABLED": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "METHANE_APPS_BUILD_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_TESTS_BUILD_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_CHECKS_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_RUN_TESTS_DURING_BUILD": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "METHANE_UNITY_BUILD_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_CODE_COVERAGE_ENABLED": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "METHANE_SHADERS_CODEVIEW_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_OPEN_IMAGE_IO_ENABLED": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "METHANE_COMMAND_DEBUG_GROUPS_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_LOGGING_ENABLED": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "METHANE_SCOPE_TIMERS_ENABLED": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "METHANE_ITT_INSTRUMENTATION_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_ITT_METADATA_ENABLED": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "METHANE_GPU_INSTRUMENTATION_ENABLED": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "METHANE_TRACY_PROFILING_ENABLED": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "METHANE_TRACY_PROFILING_ON_DEMAND": {
                    "type": "BOOL",
                    "value": "OFF"
                }
            }
        },
        {
            "name": "Profile",
            "inherits": "Default",
            "hidden": true,
            "cacheVariables": {
                "METHANE_SHADERS_CODEVIEW_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_COMMAND_DEBUG_GROUPS_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_LOGGING_ENABLED": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "METHANE_SCOPE_TIMERS_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_ITT_INSTRUMENTATION_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_ITT_METADATA_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_GPU_INSTRUMENTATION_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_TRACY_PROFILING_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "METHANE_TRACY_PROFILING_ON_DEMAND": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Vulkan",
            "inherits": "Default",
            "hidden": true,
            "cacheVariables": {
                "METHANE_GFX_VULKAN_ENABLED": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Ninja-Multi-Default",
            "inherits": "Default",
            "hidden": true,
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "Ninja-Multi-Profile",
            "inherits": "Profile",
            "hidden": true,
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "Ninja-Multi-Win-DX",
            "displayName": "Ninja Multi-Config for Windows (DirectX)",
            "description": "Default configuration using Ninja Multi-Config generator for Windows with DirectX",
            "inherits": [ "Ninja-Multi-Default" ],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "Ninja-Multi-Win-VK",
            "displayName": "Ninja Multi-Config for Windows (Vulkan)",
            "description": "Default configuration using Ninja Multi-Config generator for Windows with Vulkan",
            "inherits": [
                "Vulkan",
                "Ninja-Multi-Win-DX"
            ]
        },
        {
            "name": "Ninja-Multi-Profile-Win-DX",
            "inherits": [
                "Ninja-Multi-Profile",
                "Ninja-Multi-Win-DX"
            ],
            "displayName": "Ninja Multi-Config Profiling for Windows (DirectX)",
            "description": "Profiling configuration using Ninja Multi-Config generator for Windows with DirectX"
        },
        {
            "name": "Ninja-Multi-Profile-Win-VK",
            "displayName": "Ninja Multi-Config Profiling for Windows (Vulkan)",
            "description": "Profiling configuration using Ninja Multi-Config generator for Windows with Vulkan",
            "inherits": [
                "Vulkan",
                "Ninja-Multi-Profile-Win-DX"
            ]
        },
        {
            "name": "Ninja-Multi-Linux",
            "inherits": "Ninja-Multi-Default",
            "displayName": "Ninja Multi-Config Profiling for Linux (Vulkan)",
            "description": "Profiling configuration using Ninja Multi-Config generator for Linux with Vulkan",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "Ninja-Multi-Profile-Linux",
            "inherits": [
                "Ninja-Multi-Profile",
                "Ninja-Multi-Linux"
            ],
            "displayName": "Ninja Multi-Config Profiling for Linux (Vulkan)",
            "description": "Profiling configuration using Ninja Multi-Config generator for Linux with Vulkan"
        },
        {
            "name": "Ninja-Multi-MacOS",
            "inherits": "Ninja-Multi-Default",
            "displayName": "Ninja Multi-Config for MacOS (Metal)",
            "description": "Default configuration using Ninja Multi-Config generator for MacOS with Metal",
            "cacheVariables": {
                "CMAKE_OSX_ARCHITECTURES": "arm64;x86_64"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "Ninja-Multi-Profile-MacOS",
            "inherits": [
                "Ninja-Multi-Profile",
                "Ninja-Multi-MacOS"
            ],
            "displayName": "Ninja Multi-Config Profiling for MacOS (Metal)",
            "description": "Profiling configuration using Ninja Multi-Config generator for MacOS with Metal"
        }
    ],
    "buildPresets": [
        {
            "name": "Windows-Build",
            "hidden": true,
            "jobs": 16,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "Linux-Build",
            "hidden": true,
            "jobs": 16,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "MacOS-Build",
            "hidden": true,
            "jobs": 8,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "Ninja-Multi-Win-DX-Debug",
            "displayName": "Debug build for Windows (DirectX)",
            "description": "Debug build with Ninja Multi-Config generator for Windows (DirectX)",
            "inherits": [ "Windows-Build" ],
            "configurePreset": "Ninja-Multi-Win-DX",
            "configuration": "Debug"
        },
        {
            "name": "Ninja-Multi-Win-DX-Release",
            "displayName": "Release build for Windows (DirectX)",
            "description": "Release build with Ninja Multi-Config generator for Windows (DirectX)",
            "inherits": [ "Windows-Build" ],
            "configurePreset": "Ninja-Multi-Win-DX",
            "configuration": "Debug"
        },
        {
            "name": "Ninja-Multi-Win-DX-Profile",
            "displayName": "Profiling build for Windows (DirectX)",
            "description": "Profiling build with Ninja Multi-Config generator for Windows (DirectX)",
            "inherits": [ "Windows-Build" ],
            "configurePreset": "Ninja-Multi-Profile-Win-DX",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "Ninja-Multi-Win-VK-Debug",
            "displayName": "Debug build for Windows (Vulkan)",
            "description": "Debug build with Ninja Multi-Config generator for Windows (Vulkan)",
            "inherits": [ "Windows-Build" ],
            "configurePreset": "Ninja-Multi-Win-VK",
            "configuration": "Debug"
        },
        {
            "name": "Ninja-Multi-Win-VK-Release",
            "displayName": "Release build for Windows (Vulkan)",
            "description": "Release build with Ninja Multi-Config generator for Windows (Vulkan)",
            "inherits": [ "Windows-Build" ],
            "configurePreset": "Ninja-Multi-Win-VK",
            "configuration": "Debug"
        },
        {
            "name": "Ninja-Multi-Win-VK-Profile",
            "displayName": "Profiling build for Windows (Vulkan)",
            "description": "Profiling build with Ninja Multi-Config generator for Windows (Vulkan)",
            "inherits": [ "Windows-Build" ],
            "configurePreset": "Ninja-Multi-Profile-Win-VK",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "Ninja-Multi-Lin-Debug",
            "displayName": "Debug build for Linux (Vulkan)",
            "description": "Debug build with Ninja Multi-Config generator for Linux (Vulkan)",
            "inherits": [ "Linux-Build" ],
            "configurePreset": "Ninja-Multi-Linux",
            "configuration": "Debug"
        },
        {
            "name": "Ninja-Multi-Lin-Release",
            "displayName": "Release build for Linux (Vulkan)",
            "description": "Release build with Ninja Multi-Config generator for Linux (Vulkan)",
            "inherits": [ "Linux-Build" ],
            "configurePreset": "Ninja-Multi-Linux",
            "configuration": "Debug"
        },
        {
            "name": "Ninja-Multi-Lin-Profile",
            "displayName": "Profiling build for Linux (Vulkan)",
            "description": "Profiling build with Ninja Multi-Config generator for Linux (Vulkan)",
            "inherits": [ "Linux-Build" ],
            "configurePreset": "Ninja-Multi-Profile-Linux",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "Ninja-Multi-Mac-Debug",
            "displayName": "Debug build for MacOS (Metal)",
            "description": "Debug build with Ninja Multi-Config generator for MacOS (Metal)",
            "inherits": [ "MacOS-Build" ],
            "configurePreset": "Ninja-Multi-MacOS",
            "configuration": "Debug"
        },
        {
            "name": "Ninja-Multi-Mac-Release",
            "displayName": "Release build for MacOS (Metal)",
            "description": "Release build with Ninja Multi-Config generator for MacOS (Metal)",
            "inherits": [ "MacOS-Build" ],
            "configurePreset": "Ninja-Multi-MacOS",
            "configuration": "Debug"
        },
        {
            "name": "Ninja-Multi-Mac-Profile",
            "displayName": "Profiling build for MacOS (Metal)",
            "description": "Profiling build with Ninja Multi-Config generator for MacOS (Metal)",
            "inherits": [ "MacOS-Build" ],
            "configurePreset": "Ninja-Multi-Profile-MacOS",
            "configuration": "RelWithDebInfo"
        }
    ]
}